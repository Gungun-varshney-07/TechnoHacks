#include <stdio.h>

int main()
{
    char degree;
    double temperature;
    printf("Enter the degree of temperature(C/F): ");
    scanf("%c", &degree);
    printf("Enter the value of temperature to be converted: ");
    scanf("%lf", &temperature);
    if(degree == 'C' || degree == 'c'){
        printf("%.1lf째C = %.1lf째F", temperature, (temperature*9/5)+32);
    }
    else if(degree == 'F' || degree == 'f'){
        printf("%.1lf째F = %.1lf째C", temperature, (temperature-32)*5/9);
    }
    return 0;
}
